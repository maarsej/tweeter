<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Meta Information -->
  <title>Tweeter - Home Page</title>

  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,700,700i">

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type "text/css" />
  <link rel="stylesheet" href="/styles/new-tweet.css" type "text/css" />
  <link rel="stylesheet" href="/styles/tweet.css" type "text/css" />

  <!-- External JS -->
  <script type="text/javascript" src="/vendor/jquery-2.2.3.min.js"></script>
  <script src="/scripts/moment.js"></script>

  <!-- App JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/composer-char-counter.js"></script>
</head>

<body>

  // <!-- Top nav bar (fixed) -->
  <nav id="nav-bar">
    <img class="logo" src="/images/bird.png" width="80px" height="80px">
    <span class="header">Tweeter</span>
    <% if(userID == undefined){ %>
      <form id="signin-form">
        <textarea id="user" name='user' type='user' placeholder="username"></textarea>
        <textarea id="pass" name='pass' type='pass' placeholder="password"></textarea>
        </br>
        <input id="login-btn" type="submit" name="action" value="Login">
        <input id="register-btn" type="submit" name="action" value="Register">
      </form>
      <% } else { %>
      <form id="logout-btn" method="POST" action="/logout">
        <%= 'user: '+userID.substring(20,24) %>
        <input type="submit" value="Logout">
      </form> </br>
      <button id ="compose"> Compose </button>
      <% } %>
  </nav>

  // <!-- Page-specific (main) content here -->
  <main class="container">
    <% if(userID !== undefined){ %>
    <section class="new-tweet">
      <h2>Compose Tweet</h2>
      <hr>
      <form id="compose-form" method="POST" action="/tweets">
        <textarea id = "compose-input-field" name="text" placeholder="What are you humming about?"></textarea>
        <input type="submit" value="Tweet">
        <span class="counter">140</span>
      </form>
    </section>
    <% } %>
    <div id = "feed-container">
    </div>
  </main>

</body>

</html>